<Window x:Class="Math_Game.EnterUserData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="wndEnterUserData" Height="400" Width="288" Closing="Window_Closing">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/rm251-aum-02-f.jpg"/>
        </Grid.Background>
        <Label Content="Enter User" Height="39" HorizontalAlignment="Center" Margin="0,28,0,0" x:Name="lblEnterUser" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Width="180" FontFamily="ROG Fonts" Foreground="#FFFBF7F7" />
        <Button Content="Close" Height="26" HorizontalAlignment="Center" Margin="0,249,0,0" Name="cmdCloseUserDataForm" VerticalAlignment="Top" Width="60" Click="cmdCloseUserDataForm_Click" FontFamily="ROG Fonts" />
        <Label x:Name="lblEnterData" Content="Please enter your name and age." HorizontalAlignment="Center" Margin="0,67,0,0" VerticalAlignment="Top" Foreground="#FFF9F4F4"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Center" Margin="0,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblName" Content="Name:" HorizontalAlignment="Left" Margin="37,106,0,0" VerticalAlignment="Top" Foreground="#FFFCF7F7"/>
        <Label x:Name="lblAge" Content="Age:" HorizontalAlignment="Left" Margin="42,142,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.493,0.591" Foreground="#FFFBF6F6"/>
        <Button x:Name="cmdEnter" Content="Enter" HorizontalAlignment="Center" VerticalAlignment="Top" Click="cmdEnter_Click" Margin="0,198,0,0" Height="26" Width="60" FontFamily="ROG Fonts"/>
        <TextBox x:Name="txtAge" HorizontalAlignment="Center" Margin="0,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblUserData" HorizontalAlignment="Left" Margin="42,224,0,0" VerticalAlignment="Top" Content="lblUserData" Foreground="White" Visibility="Hidden"/>
        <Label x:Name="lblUserName" Content="lblUserName" HorizontalAlignment="Left" Margin="37,124,0,0" VerticalAlignment="Top" Foreground="Red" FontSize="10" Visibility="Hidden"/>
        <Label x:Name="lblUserAge" Content="lblUserAge" HorizontalAlignment="Left" Margin="37,168,0,0" VerticalAlignment="Top" Foreground="Red" FontSize="10" Visibility="Hidden"/>
    </Grid>
</Window>
