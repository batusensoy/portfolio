<Window x:Class="Math_Game.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="wndGame" Height="342" Width="598" Closing="Window_Closing">
    <Window.Background>
        <ImageBrush>
            <ImageBrush.ImageSource>/rm251-aum-02-f.jpg</ImageBrush.ImageSource>
        </ImageBrush>
    </Window.Background>
    <Grid>
        <Button Content="End Game" FontSize="14" Height="45" HorizontalAlignment="Left" Margin="297,75,0,0" Name="cmdEndGame" VerticalAlignment="Top" Width="95" Click="cmdEndGame_Click" FontFamily="ROG Fonts" />
        <Button Content="High Scores" Height="45" HorizontalAlignment="Left" Margin="176,225,0,0" Name="cmdHighScores" VerticalAlignment="Top" Width="98" Click="cmdHighScores_Click" FontFamily="ROG Fonts" FontSize="11" />
        <Label x:Name="lblTimer" HorizontalAlignment="Left" Margin="451,80,0,0" VerticalAlignment="Top" Content="Time:" FontFamily="ROG Fonts" Foreground="White"/>
        <Label x:Name="lblQuestion" HorizontalAlignment="Left" Margin="147,139,0,0" VerticalAlignment="Top" FontSize="20" Foreground="#FFFBFAFA" FontFamily="ROG Fonts"/>
        <TextBox x:Name="txtUserGuess" HorizontalAlignment="Left" Margin="259,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="34" RenderTransformOrigin="1.788,0.526"/>
        <Button x:Name="cmdStart" Content="Start" HorizontalAlignment="Left" Margin="177,75,0,0" VerticalAlignment="Top" Click="cmdStart_Click" Height="45" Width="97" FontSize="14" FontFamily="ROG Fonts"/>
        <Button x:Name="cmdSubmit" Content="Submit" HorizontalAlignment="Left" Margin="324,146,0,0" VerticalAlignment="Top" IsDefault="True" Click="cmdSubmit_Click" FontFamily="ROG Fonts"/>
        <Label x:Name="lblAnswer" Content="lblAnswer" HorizontalAlignment="Center" Margin="0,186,0,0" VerticalAlignment="Top" Visibility="Hidden" FontSize="20" FontFamily="ROG Fonts"/>
        <Button x:Name="cmdReturnToMainMenu" Content="Main Menu" HorizontalAlignment="Left" Margin="297,227,0,0" VerticalAlignment="Top" Click="cmdReturnToMainMenu_Click" Height="43" Width="90" FontFamily="ROG Fonts"/>
        <Label x:Name="lblValidAnswer" HorizontalAlignment="Left" Margin="397,144,0,0" VerticalAlignment="Top" Foreground="#FFFC0404" FontSize="14"/>
    </Grid>
</Window>

