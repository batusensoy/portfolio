<Window x:Class="Math_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Math_Game"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/2684961.jpg"/>
        </Grid.Background>
        <Label x:Name="lblMathMainMenu" Content="Cool Math Game" HorizontalAlignment="Center" Margin="0,51,0,0" VerticalAlignment="Top" FontSize="72" FontFamily="Magneto" Foreground="Black"/>
        <RadioButton Content="Addition" x:Name="rbAddition" GroupName="GameType" HorizontalAlignment="Left" Margin="103,159,0,0" VerticalAlignment="Top" FontSize="25" FontFamily="Harlow Solid Italic"/>
        <RadioButton Content="Subtraction" x:Name="rbSubtraction" GroupName="GameType" HorizontalAlignment="Left" Margin="245,160,0,0" VerticalAlignment="Top" FontSize="25" FontFamily="Harlow Solid Italic"/>
        <RadioButton Content="Multiplication" x:Name="rbMultiplication" GroupName="GameType" HorizontalAlignment="Left" Margin="400,158,0,0" VerticalAlignment="Top"  FontSize="25" FontFamily="Harlow Solid Italic"/>
        <RadioButton Content="Division" x:Name="rbDivision" GroupName="GameType" HorizontalAlignment="Left" Margin="591,159,0,0" VerticalAlignment="Top"  FontSize="25" FontFamily="Harlow Solid Italic"/>
        <Button x:Name="cmdPlayGame" Content="Play Game" HorizontalAlignment="Left" Margin="127,306,0,0" VerticalAlignment="Top" Height="46" Width="105" Click="cmdPlayGame_Click" Background="White" FontFamily="ROG Fonts" BorderBrush="White"/>
        <Button x:Name="cmdHighScores" Content="High Scores" HorizontalAlignment="Left" Margin="338,306,0,0" VerticalAlignment="Top" Height="46" Width="103" Click="cmdHighScores_Click" Background="#FFFBFAFA" FontFamily="ROG Fonts" FontSize="11" BorderBrush="White"/>
        <Button x:Name="cmdEnterUserData" Content="Enter User " HorizontalAlignment="Left" Margin="546,306,0,0" VerticalAlignment="Top" Height="46" Width="104" Click="cmdEnterUserData_Click" Background="White" FontFamily="ROG Fonts" BorderBrush="White"/>
        <Label x:Name="lblUserDataInvalid" Content="lblUserDataInvalid" HorizontalAlignment="Left" Margin="297,254,0,0" VerticalAlignment="Top" IsEnabled="False" FontSize="20" Foreground="#FFF90606" Visibility="Hidden" FontWeight="Bold"/>
        <Label x:Name="lblGameType" Content="lblGameType" HorizontalAlignment="Left" Margin="297,217,0,0" VerticalAlignment="Top" IsEnabled="False" FontSize="20" Foreground="#FFF90606" Visibility="Hidden" FontWeight="Bold"/>

    </Grid>
</Window>
