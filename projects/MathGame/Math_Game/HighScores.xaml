<Window x:Class="Math_Game.HighScores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="wndHighScores" Height="500
        " Width="400" Closing="Window_Closing">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/rm251-aum-02-f.jpg"/>
        </Grid.Background>
        <Label Content="High Scores" FontSize="24" FontWeight="Bold" Height="45" HorizontalAlignment="Center" Margin="0,10,0,0" Name="label1" VerticalAlignment="Top" Width="232" FontFamily="ROG Fonts" Foreground="White" />
        <Button Content="Close " FontSize="18" Height="45" HorizontalAlignment="Center" Name="cmdCloseHighScores" VerticalAlignment="Top" Width="198" Click="cmdCloseHighScores_Click" Margin="0,283,0,0" FontFamily="ROG Fonts" Background="#FF0E0B94" Foreground="#FFFEFCFC" BorderBrush="#FF0E0B94" />
        <TextBox x:Name="txtHighScores" HorizontalAlignment="Center" Margin="0,71,0,0" TextWrapping="Wrap" Text="Scores will be displayed here" VerticalAlignment="Top" Width="309"/>
    </Grid>
</Window>

